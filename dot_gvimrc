" Default starting size
set lines=64 columns=160

" Full-screen options.
set fuoptions=maxvert,maxhorz

" Set the font.
" set guifont=Menlo:h14
" set guifont=Inconsolata:h14
set guifont=Monaco:h14

" Keep highlighted text out of copy register
set guioptions-=A

" Hide the toolbar.
set guioptions-=T

" Hide the scrollbars.
set guioptions-=r " right-hand scrollbar
set guioptions-=R " right-hand scrollbar when v-split
set guioptions-=l " left-hand scrollbar
set guioptions-=L " left-hand scrollbar when v-split.

set background=dark
colorscheme ir_black
